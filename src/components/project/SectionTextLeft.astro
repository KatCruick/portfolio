---
import type { ImageMetadata } from 'astro';

// import Picture from 'astro/components/Picture.astro';
import TextBox from './TextBox.astro';

import fallbackImage from '../../assets/images/e-community-logo.png';
import { Image } from 'astro:assets';

type Props = {
  image: ImageMetadata;
};

const { image = fallbackImage } = Astro.props;
---

<div class="flex w-full items-start gap-x-5">
  <div class="basis-1/2">
    <TextBox>
      <slot />
    </TextBox>
  </div>
  <div class="flex basis-1/2 items-center justify-center">
    <div class="grow basis-1">
      <Image
        src={image}
        alt="A description of my image."
        width={600}
        layout="constrained"
        fit="contain"
      />
    </div>
  </div>
</div>
