---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

import TextBox from './TextBox.astro';

import fallbackImage from '../../assets/images/e-community-logo.png';

type Props = {
  image: ImageMetadata;
  imageAlt: string | null;
  imageHeight?: number;
};

const { image = fallbackImage, imageAlt, imageHeight = 400 } = Astro.props;
---

<div class="flex w-full items-stretch gap-x-5">
  <div class="basis-1/2">
    <TextBox>
      <slot />
    </TextBox>
  </div>
  <div
    class="flex basis-1/2 items-center justify-center border-1 border-black p-4"
  >
    <Picture
      src={image}
      alt={imageAlt}
      height={imageHeight}
      layout="constrained"
      fit="contain"
    />
  </div>
</div>
