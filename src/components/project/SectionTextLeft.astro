---
import type { ImageMetadata } from 'astro';

import Picture from 'astro/components/Picture.astro';
import TextBox from './TextBox.astro';

import fallbackImage from '../../assets/images/e-community-logo.png';

type Props = {
  image: ImageMetadata;
};

const { image = fallbackImage } = Astro.props;
---

<div class="flex w-full gap-x-5">
  <div class="basis-1/2">
    <TextBox>
      <slot />
    </TextBox>
  </div>
  <div class="flex w-full basis-1/2 items-center justify-center bg-amber-100">
    <Picture
      src={image}
      formats={['avif', 'webp']}
      alt="A description of my image."
    />
  </div>
</div>
