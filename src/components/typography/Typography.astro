---
import type { HTMLTag } from 'astro/types';

export enum TYPOGRAPHIC_ELEMENT {
  H1 = 'h1',
  H2 = 'h2',
  H3 = 'h3',
  BODY = 'body',
}

type ElementProps = {
  tag: HTMLTag;
  classNames: string;
};

const TYPOGRAPHIC_ELEMENT_MAP: Record<TYPOGRAPHIC_ELEMENT, ElementProps> = {
  [TYPOGRAPHIC_ELEMENT.H1]: { tag: 'h1', classNames: 'type-h1' },
  [TYPOGRAPHIC_ELEMENT.H2]: { tag: 'h2', classNames: 'type-h2' },
  [TYPOGRAPHIC_ELEMENT.H3]: { tag: 'h3', classNames: 'type-h3' },
  [TYPOGRAPHIC_ELEMENT.BODY]: { tag: 'body', classNames: 'type-body' },
};

type Props = {
  type: TYPOGRAPHIC_ELEMENT;
};

const { type } = Astro.props;

const { tag: Element, classNames } = TYPOGRAPHIC_ELEMENT_MAP[type];
---

<Element class={classNames}>
  <slot />
</Element>
