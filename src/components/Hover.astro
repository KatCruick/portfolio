---
import { Picture } from 'astro:assets';

import hoverImage from '../assets/images/flow.png';
---

<div
  data-hover-image
  class="pointer-events-none invisible absolute z-40 flex h-[440px] w-[640px] border-2 bg-white p-20 transition-opacity duration-300 ease-in-out"
>
  <Picture
    src={hoverImage}
    formats={['avif', 'webp']}
    alt="A description of my image."
  />
</div>
