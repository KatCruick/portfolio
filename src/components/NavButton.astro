---
import SubheadingFour from "./typography/SubheadingFour.astro";

type Props = {
  href: string;
  label: string;
};

const { href, label } = Astro.props;

const currentPath = Astro.url.pathname;

const activeClass = currentPath === href ? "bg-yellow" : "bg-none";
---

<a href={href}>
  <div class="group flex flex-col items-center p-2">
    <SubheadingFour>
      {label}
    </SubheadingFour>
    <div class={`${activeClass} w-20 h-1 group-has-hover:bg-yellow`}></div>
  </div>
</a>
