---
const arrowStart = '640px';
const arrowEnd = '65%';
---

<div class="pointer-events-none absolute inset-0">
  <!-- Top horizontal line -->
  <div
    class="absolute top-0 right-0 h-[2px] bg-black"
    style={`left: ${arrowStart} `}
  >
  </div>
  <!-- Right vertical line -->
  <div class="absolute top-0 right-0 bottom-0 w-[2px] bg-black"></div>
  <!-- Bottom line with arrowhead -->
  <div
    class="absolute right-0 bottom-0 h-[2px] rounded-l-full bg-black"
    style={`left: ${arrowEnd} `}
  >
  </div>
  <div
    class="absolute right-0 -bottom-1.5 h-[14px]"
    style={`left: ${arrowEnd}`}
  >
    <svg
      class="relative shrink-0"
      width="9"
      height="14"
      viewBox="0 0 9 14"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M8 1L1.5 7L8 13"
        stroke="black"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </div>
</div>
