---
import type { InferEntrySchema } from 'astro:content';
import Text from '../Text.astro';

import Clock from '../../assets/icons/clock.svg';
import Handshake from '../../assets/icons/handshake.svg';
import MagnifyingGlass from '../../assets/icons/magnifying-glass.svg';
import Portrait from '../../assets/icons/portrait.svg';
import Tools from '../../assets/icons/tools.svg';

type Overview = Exclude<InferEntrySchema<'projects'>['overview'], undefined>;

type Props = {
  overview: Overview;
};

const { overview } = Astro.props;

const bullets = [
  {
    label: 'Client',
    icon: Handshake,
    content: overview.client,
  },
  {
    label: 'Role',
    icon: Portrait,
    content: overview.role,
  },
  {
    label: 'Time',
    icon: Clock,
    content: overview.time,
  },
  {
    label: 'Tools',
    icon: Tools,
    content: overview.tools,
  },
  {
    label: 'Methods',
    icon: MagnifyingGlass,
    content: overview.methods,
  },
];

const details = [
  {
    label: 'Problem',
    content: overview.problem,
  },
  {
    label: 'Objectives',
    content: overview.objectives,
  },
  {
    label: 'Key Findings',
    content: overview.findings,
  },
  {
    label: 'Implications',
    content: overview.implications,
  },
];
---

<div class="flex justify-between border-2 px-10 py-6">
  <div class="flex basis-1/3 flex-col gap-y-3">
    {
      bullets.map(({ label, content, icon: Icon }) => (
        <div>
          <div class="flex items-center gap-x-4">
            <div class="flex h-20 w-20 shrink-0 items-center justify-center rounded-full border-2">
              <Icon />
            </div>

            <Text type="body">{content}</Text>
          </div>
          <div class="flex w-20 justify-center">
            <p class="text-[14px] leading-[24px]">{label}</p>
          </div>
        </div>
      ))
    }
  </div>
  <div class="flex w-full basis-2/3 flex-col justify-around">
    {
      details.map(({ label, content }) => (
        <div class="gap flex w-full items-center justify-end gap-x-5">
          <Text type="sh3">{label}</Text>
          <div class="max-w-[550px]">
            <Text type="body">{content}</Text>
          </div>
        </div>
      ))
    }
  </div>
</div>
